+  deploy:
+    working_directory: ~/mootube
+    docker:
+      - image: ansible/ansible:ubuntu1604
+        environment:
+          ANSIBLE_HOST_KEY_CHECKING: no
+    steps:
+      # Installation
+      - run:
+          name: Install System Packages
+          command: pip install --upgrade pip && pip install ansible
+
+      # Dependencies
+      - checkout
+      - restore_cache:
+          key: mootube-{{ .Branch }}-{{ checksum "./ansible/requirements.yml" }}-v1
+      - run: ansible-galaxy install -r ansible/requirements.yml
+      - save_cache:
+          key: mootube-{{ .Branch }}-{{ checksum "./ansible/requirements.yml" }}-v1
+          paths:
+            - '/root/.ansible/roles'
+
+      - run: echo $ANSIBLE_VAULT_PASS > ./ansible/.vault-pass.txt
+      # With sed we replace "\n " chars with actual new lines after getting value from CircleCI env variable
+      - run: |
+          echo $ANSIBLE_SSH_PRIVATE_KEY > ~/.ssh/KnpU-Tutorial.pem && \
+          chmod 0600 ~/.ssh/KnpU-Tutorial.pem && \
+          sed -i "s/\\\n /\n/g" ~/.ssh/KnpU-Tutorial.pem
+      - run: ansible-playbook ansible/deploy.yml -i ansible/hosts.ini -e "git_branch=master ansistrano_release_version=`date -u +%Y%m%d%H%M%SZ`" --vault-password-file=./ansible/.vault-pass.txt
+      - run: rm ./ansible/.vault-pass.txt
+      - run: rm ~/.ssh/KnpU-Tutorial.pem
+
